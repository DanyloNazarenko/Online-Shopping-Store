@model CustomerModel.CookieConsentModel

<modal id="cookie-consent-dialog" sm-render-at-page-end="true" sm-size="Medium">
    <modal-header sm-title="@T("Admin.Customers.CookieConsent")"></modal-header>
    <modal-body>
        <div class="adminContent">
            <div class="adminRow">
                <div class="adminTitle">
                    <smart-label asp-for="ConsentOn" />
                </div>
                <div class="adminData">
                    <div class="form-control-plaintext">
                        @Html.DisplayFor(x => x.ConsentOn)
                    </div>
                </div>
            </div>
            <div class="adminRow">
                <div class="adminTitle">
                    <smart-label asp-for="AllowRequired" />
                </div>
                <div class="adminData">
                    <div class="form-control-plaintext">
                        <i class="fa fa-fw icon-active-@Model.AllowRequired.ToString().ToLower()"></i>
                    </div>
                </div>
            </div>
            <div class="adminRow">
                <div class="adminTitle">
                    <smart-label asp-for="AllowAnalytics" />
                </div>
                <div class="adminData">
                    <div class="form-control-plaintext">
                        <i class="fa fa-fw icon-active-@Model.AllowAnalytics.ToString().ToLower()"></i>
                    </div>
                </div>
            </div>
            <div class="adminRow">
                <div class="adminTitle">
                    <smart-label asp-for="AllowThirdParty" />
                </div>
                <div class="adminData">
                    <div class="form-control-plaintext">
                        <i class="fa fa-fw icon-active-@Model.AllowThirdParty.ToString().ToLower()"></i>
                    </div>
                </div>
            </div>
            <div class="adminRow">
                <div class="adminTitle">
                    <smart-label asp-for="AdUserDataConsent" />
                </div>
                <div class="adminData">
                    <div class="form-control-plaintext">
                        <i class="fa fa-fw icon-active-@Model.AdUserDataConsent.ToString().ToLower()"></i>
                    </div>
                </div>
            </div>
            <div class="adminRow">
                <div class="adminTitle">
                    <smart-label asp-for="AdPersonalizationConsent" />
                </div>
                <div class="adminData">
                    <div class="form-control-plaintext">
                        <i class="fa fa-fw icon-active-@Model.AdPersonalizationConsent.ToString().ToLower()"></i>
                    </div>
                </div>
            </div>
        </div>
    </modal-body>
    <modal-footer>
        <button class="btn btn-secondary btn-flat" data-dismiss="modal" aria-hidden="true">
            <span>@T("Common.Cancel")</span>
        </button>
    </modal-footer>
</modal>
