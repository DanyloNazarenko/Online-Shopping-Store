@using Smartstore.Web.Models.Customers

@model MyAccountHeaderModel

<div class="myaccount-header row gx-2 gy-1">
    <div class="col-auto d-flex align-self-center justify-content-center">
        <partial name="Customer.Avatar" model="Model.Avatar" />
    </div>
    <div class="col align-self-center text-truncate pr-4 pr-md-1">
        <div class="my-account-username fwm">
            <div class="row no-gutters">
                <div class="col text-truncate pr-1">@Model.CustomerName</div>
                <div sm-if="Model.RewardPoints > 0"
                        class="col-auto badge badge-pill badge-counter badge-success"
                        title="@T("ShoppingCart.Totals.RewardPoints", Model.RewardPoints)">
                    @Model.RewardPoints
                </div>
            </div>
        </div>
        <div class="my-account-email text-truncate small">
            <span class="text-muted">@T("Account.CustomerSince")</span>
            <span>@Model.CustomerSince</span>
        </div>
    </div>
</div>