@{
    Layout = "_Layout";
    Assets.BodyAttributes.AppendCssClass("myaccount-page");
}

<div class="page page-myaccount page-myaccount-@ViewBag.PageClassToken">
    <div class="page-body">
        <div class="row">
            <div class="col-md-4 col-lg-3 d-print-none">
                <div class="d-none d-md-block" sm-suppress-if-empty-zone="myaccount_menu_before">
                    <zone name="myaccount_menu_before" />
                </div>

                <div class="card my-account-menu nav-collapsible">
                    <div class="card-header p-2 nav-toggler collapsed" 
                         data-toggle="collapse" data-target="#myaccount-menu" 
                         aria-controls="myaccount-menu" aria-expanded="false" tabindex="0">
                        @await Component.InvokeAsync("MyAccountHeader")
                    </div>

                    <div id="myaccount-menu" class="collapse nav-collapse" role="region">
                        <menu name="MyAccount" template="ListGroup" />
                    </div>
                </div>
                
                <div class="d-none d-md-block" sm-suppress-if-empty-zone="myaccount_menu_after">
                    <zone name="myaccount_menu_after" />
                </div>
            </div>
            <div class="col-md-8 col-lg-9">
                <section aria-labelledby="myaccount-header">
                    <div class="page-title pt-4 pt-md-0">
                        <h1 id="myaccount-header" class="h3">@ViewBag.PageTitle</h1>
                    </div>

                    @RenderBody()
                </section>
            </div>
        </div>
    </div>
</div>

<script>
    $(function () {
        $(".my-account-menu .card-header").on('ak-expand ak-collapse', function (e) {
            $(this).trigger("click");
        });
    });
</script>