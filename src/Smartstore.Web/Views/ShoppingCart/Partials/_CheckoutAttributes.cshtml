@using Smartstore.Web.Models.Cart;

@model IList<ShoppingCartModel.CheckoutAttributeModel>

<fieldset sm-if="Model.Count > 0">
    <legend class="sr-only">@string.Join(", ", Model.Select(x => x.GetLabel())).Truncate(100, "…")</legend>
    <div class="cart-checkout-attributes">
	    @foreach (var attribute in Model)
	    {
		    <partial name="ChoiceTemplates/Choice" model="attribute" />
	    }
    </div>
</fieldset>