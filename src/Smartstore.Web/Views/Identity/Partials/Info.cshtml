@using Smartstore.Web.Models.Identity;

@model ProfileInfoModel

<div class="profile-info-box row">
    <div class="user-details col col-sm-auto text-center pb-3">
        <partial name="Customer.Avatar" model="Model.Avatar" />

        <zone name="profile_page_info_userdetails"></zone>
    </div>

    <div class="user-stats col">
        <div sm-if="Model.LocationEnabled || Model.JoinDateEnabled || Model.DateOfBirthEnabled">
            <div class="title h4">
                @T("Profile.Statistics")
            </div>

            <dl class="row profile-stat">
                @if (Model.LocationEnabled)
                {
                    <dt class="col-sm-3 fwn text-muted">@T("Profile.Country")</dt>
                    <dd class="col-sm-9">@Model.Location</dd>
                }
                @if (Model.JoinDateEnabled)
                {
                    <dt class="col-sm-3 fwn text-muted">@T("Profile.JoinDate")</dt>
                    <dd class="col-sm-9">
                        <time asp-for="@Model.JoinDate" sm-format="f"></time>
                    </dd>
                }
                @if (Model.DateOfBirthEnabled)
                {
                    <dt class="col-sm-3 fwn text-muted">@T("Profile.DateOfBirth")</dt>
                    <dd class="col-sm-9">
                        <time asp-for="@Model.DateOfBirth" sm-format="D"></time>
                    </dd>
                }
                <zone name="profile_page_info_userstats"></zone>
            </dl>
        </div>
    </div>
</div>
