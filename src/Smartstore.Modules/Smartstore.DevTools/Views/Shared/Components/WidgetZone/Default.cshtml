@{
    var widgetZone = ViewData["widgetZone"] as string;
    var controller = ViewContext.RouteData.Values["controller"].ToString();
    var isAdminController = controller.Contains("Admin", StringComparison.OrdinalIgnoreCase);
}

@if (isAdminController && "sidebar_left".Equals(widgetZone))
{
    // Ignore, because it messes up the admin layout completely.
}
else
{
    <span class="badge badge-default widget-zone-info" title="@ViewData["widgetZone"]">
        Widget Zone
    </span>
}